{  
    "appenders":  
        [  
            {  
                "category":"console",  
                "type":"console"  
            },  
            {  
                "category":"log_info",  
                "type": "file",  
                "filename": "./logs/log_info/info.log",  
                "maxLogSize": 104857500,  
                "backups": 100  
            },  
            {  
                "category": "log_stat",  
                "type": "datefile",  
                "filename": "./logs/log_stat/stat"  
            },  
            {  
                "category": "log_trace",  
                "type": "datefile",  
                "filename": "./logs/log_trace/trace"  
            },  
            {  
                "category": "log_error",  
                "type": "datefile",  
                "filename": "./logs/log_error/error"  
  
            },  
            {  
                "category": "log_todo",  
                "type": "datefile",  
                "filename": "./logs/log_todo/todo"  
            }  
        ],  
    "replaceConsole": true,  
    "levels":  
    {  
        "log_info":"ALL",  
        "log_stat": "ALL",  
        "log_trace":"ALL",  
        "log_error":"ALL",  
        "log_todo":"ALL"  
    }  
}  