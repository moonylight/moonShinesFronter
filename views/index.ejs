<!DOCTYPE html>
<html>
<head>
	<%- include header %>
	<link rel='stylesheet' href='/stylesheets/index.css' />
</head>
  	<body onclick="changeBackground();return false;">
  		<div id="container">
  			<div id="header">
  				<h1>moonShinesLink</h1>
  				<em>my website</em>
  			</div>
  			<div id="nav"><a title="个人主页" href="/home">» 个人主页</a></div>
  			<div id="footer">2017/11/08</div>
  		</div>
	  	<script type="text/javascript">
	  		var body = 'querySelector' in document ? document.querySelector('body') : document.body,
	  			hoursNow = new Date().getHours();
	  		var	dateType = hoursNow > 7 && hoursNow < 18 ? "dateTime" : "night";
	  		var current_img;
	  		function changeBackground() {
	  			var img_root_path = "/images/",
	  				img_num = 6;
	  			var img_rand_No = function () {
	  				return Math.floor(Math.random() * img_num);
	  			};
	  			var img_url = function () {
	  				return img_root_path + "index_" + dateType + "_" + img_rand_No() + ".jpg";
	  			};	
				current_img = img_url();
				body.style.width= window.screen.width + "px";
				body.style.height= window.screen.height + "px";
				body.style.backgroundSize = 'cover';
				body.style.backgroundRepeat = 'no-repeat';
				body.style.backgroundImage = 'url('+ current_img +')';
	  		}
	  		changeBackground();
	  		body.onclick = function (e) {
	  			if (e.target.nodeName !== "A") {
	  				changeBackground();
	  				return false;
	  			}
	  		};
	  	</script>
  	</body>
</html>
